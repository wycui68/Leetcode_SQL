select item_category as Category, 
sum(case when day_name = 'Monday' then sum_quantity else 0 end) as 'Monday',
sum(case when day_name = 'Tuesday' then sum_quantity else 0 end) as 'Tuesday',
sum(case when day_name = 'Wednesday' then sum_quantity else 0 end) as 'Wednesday',
sum(case when day_name = 'Thursday' then sum_quantity else 0 end) as 'Thursday',
sum(case when day_name = 'Friday' then sum_quantity else 0 end) as 'Friday',
sum(case when day_name = 'Saturday' then sum_quantity else 0 end) as 'Saturday',
sum(case when day_name = 'Sunday' then sum_quantity else 0 end) as 'Sunday'
from Items t2 left join 
    (
        select item_id, day_name, sum(quantity) as 'sum_quantity'
        from 
            (
            select item_id, dayname(order_date) as 'day_name', quantity
            from Orders
            ) t1
        group by item_id, day_name
    ) t3 on t2.item_id = t3.item_id
group by item_category
order by item_category;
